<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Logs\WcfDemo\server.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="50GB" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date [%thread] %-5p %message%n" />
      </layout>
      <threshold value="DEBUG" />
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">

      <mapping><level value="FATAL" /><foreColor value="Yellow, HighIntensity" /><backColor value="Red, HighIntensity" /></mapping>
      <mapping><level value="ERROR" /><foreColor value="Red, HighIntensity" /></mapping>
      <mapping><level value="WARN" /><foreColor value="Yellow, HighIntensity" /></mapping>
      <mapping><level value="INFO" /><foreColor value="White" /></mapping>
      <mapping><level value="DEBUG" /><foreColor value="Green" /></mapping>

      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date [%thread] %-5p %message%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
      </filter>

    </appender>

    <root>
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>

  </log4net>

  <system.serviceModel>

    <bindings>

      <netTcpBinding>

        <binding name="NetTcpBinding_IDataProvider" closeTimeout="00:02:00" openTimeout="00:02:00" receiveTimeout="00:02:00" sendTimeout="00:02:00" maxBufferPoolSize="2147483647" maxBufferSize="41943040" maxReceivedMessageSize="41943040">
          <readerQuotas maxStringContentLength="32768" maxArrayLength="41943040"/>
          <security mode="None"/>
        </binding>

      </netTcpBinding>

    </bindings>

    <services>
      <service behaviorConfiguration="ServiceBehavior" name="SelfHostedWCFWindowsService.Service.Demo">
        <clear/>
        <endpoint address="net.tcp://localhost:9919/demo" behaviorConfiguration="" binding="netTcpBinding" bindingConfiguration="NetTcpBinding_IDataProvider" contract="SelfHostedWCFWindowsService.Contracts.IDemo"/>
      </service>
    </services>

    <serviceHostingEnvironment multipleSiteBindingsEnabled="true"/>

    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior">
          <serviceMetadata httpGetEnabled="false" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer maxItemsInObjectGraph="33554432" />
          <serviceTimeouts transactionTimeout="00:02:00" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
  
  <!--    http:// msdn.microsoft.com/en-us/library/ms733025.aspx, Verbose, Information, ActivityTracing"   -->
  <system.diagnostics>
    
    <sources>
      <source name="System.ServiceModel" switchValue="Critical, Error, Warning, Verbose, Information, ActivityTracing" propagateActivity="true">
        <listeners>
          <add name="traceListener" type="System.Diagnostics.XmlWriterTraceListener" initializeData="c:\Logs\WcfDemo\ServerTrace.svclog"/>
        </listeners>
      </source>
    </sources>
    
  </system.diagnostics>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>

</configuration>